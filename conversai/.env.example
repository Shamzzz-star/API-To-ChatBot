# Application Settings
APP_NAME=ConversAI
ENVIRONMENT=development
DEBUG=True

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Database (SQLite for development, PostgreSQL for production)
DATABASE_URL=sqlite:///./conversai.db
# For PostgreSQL: postgresql://user:password@localhost:5432/conversai

# Security
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
ENCRYPTION_KEY=your-encryption-key-here-32-chars

# LLM Configuration (FREE TIER)
# Get free API key from: https://console.groq.com
GROQ_API_KEY=your-groq-api-key
GROQ_MODEL=llama-3.1-8b-instant
# Alternative models: llama-3.2-3b-preview, mixtral-8x7b-32768

# Free API Keys (Optional - many work without keys)
OPENWEATHER_API_KEY=your-openweather-key
NEWSAPI_KEY=your-newsapi-key
WEATHERAPI_KEY=your-weatherapi-key
GNEWS_API_KEY=your-gnews-key
API_NINJAS_KEY=your-api-ninjas-key

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
MAX_REQUESTS_PER_DAY=1000

# Cache Settings
CACHE_TTL_WEATHER=600
CACHE_TTL_CRYPTO=60
CACHE_TTL_NEWS=1800
CACHE_TTL_DEFAULT=300

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=INFO
